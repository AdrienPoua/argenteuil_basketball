{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "target": "ES2017",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/core/*": [
        "./core/*"
      ],
      "@/utils/*": [
        "./core/shared/utils/*"
      ],
      "@/actions/*": [
        "./core/presentation/actions/*"
      ],
      "@/hooks/*": [
        "./core/presentation/hooks/*"
      ],
      "@/mappers/*": [
        "./core/infrastructure/supabase/mappers/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/sanity/*": [
        "./core/infrastructure/sanity/*"
      ]
    },
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mjs",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

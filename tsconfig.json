{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "preserve", // ou "react-jsx"
    "target": "ES2017",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/public/*": ["./public/*"],
      "@/components/*": ["./src/components/*"],
      "@/sanity/*": ["./sanity/*"],
      "@/sanityClient": ["./sanity/lib/client.ts"],
      "@/authOptions": ["./src/app/api/auth/[...nextauth]/route.ts"],
      "@/serverActions": ["./src/app/serverActions.ts"]
    },
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "src/middleware.js",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.ts",
    "src/**/*.tsx", // inclure tous les fichiers tsx dans src
    "src/**/*.ts", // inclure tous les fichiers ts dans src
    "src/app/api/auth/[...nextauth]/route.ts"
  ],
  "exclude": ["node_modules"]
}

{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "preserve", // ou "react-jsx"
    "target": "ES2017",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*": ["./src/lib/*"],
      "@utils/*": ["./src/utils/*"],
      "@nextauth/*": ["./src/api/auth/[...nextauth]/routes.ts"],
    },
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "src/middleware.js",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.ts",
    "src/**/*.tsx", // inclure tous les fichiers tsx dans src
    "src/**/*.ts", // inclure tous les fichiers ts dans src
    "src/app/api/auth/[...nextauth]/route.ts"
, "src/utils/hooks/useVisibility.ts", "src/components/TypingEffect.tsx"  ],
  "exclude": ["node_modules"]
}
